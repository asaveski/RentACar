@model IEnumerable<WebApplication1.Models.Reservation>

@{
    ViewBag.Title = "Index";
}

<h2>Reservations</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ApplicationUser.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Car.modelYear)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.days)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.reservationAddress)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.numberOfDrivingLicense)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.phoneNumber)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.fullPrice)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.ApplicationUser.Email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Car.modelYear)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.days)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.reservationAddress)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.numberOfDrivingLicense)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.phoneNumber)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.fullPrice)
        </td>
        <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.IDreservation }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.IDreservation })
                @Html.ActionLink("Details", "Details", new { id = item.IDreservation })
        </td>
    </tr>
}

</table>
